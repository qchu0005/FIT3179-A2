{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/qchu0005/FIT3179-A2/refs/heads/main/data/life_expectancy.csv"
  },
  "transform": [
    
    {
      "filter": "datum.FactValueNumeric !== null && datum.FactValueNumeric !== 'NaN' && datum.FactValueNumeric!== ''"
    },
    {
      "filter": "datum.Period == 2022"  
    }

  ],
   "mark": {
    "type": "boxplot",
    "extent": "min-max",
    "size": 60  
  },
  "encoding": {
    "x": {
      "field": "Dim1", 
      "type": "nominal",
      "title": "Gender"
    },
    "y": {
      "field": "FactValueNumeric", 
      "type": "quantitative",
      "title": "Life Expectancy"
    },
   "color": {
      "field": "Dim1",
      "type": "nominal",
      "title": "Gender",
      "scale": {
        "domain": ["Female", "Male", "Both sexes"],
        "range": ["#641e16", "black", "darkgrey"]  
      },
      "legend": null
   },
    "tooltip": [
      {"field": "Dim1", "type": "nominal"},
      {"field": "FactValueNumeric", "type": "quantitative"}
    ]
  },
  "title": {
    "text": "Box Plot of Life Expectancy by Gender (2022)",
    "fontSize": 20,
    "fontWeight": "bold",
    "font": "serif"  ,
    "align": "center",
    "lineHeight": 3
  },
  "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14,
      "titleLineHeight": 5
    }
  },
  "width": 400,   
  "height": 300
}

{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/qchu0005/FIT3179-A2/refs/heads/main/data/malaysia_death_change.csv"
  },
  
  "transform": [
    {
      "filter": "(year(datum.date) >= 2011 && year(datum.date) <= 2021)"
    }
  ],
  "layer": [
    {
      "selection": {
        "highlight": {
          "type": "single",
          "on": "mouseover",
          "empty": "none",
          "encodings": ["x"]
        }
      },
      "mark": {
        "type": "bar", 
        "color": "darkred", 
        "tooltip": true,
        "size": 20
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "title": "Year"
        },
        "y": {
          "field": "deaths_per_1000_people",
          "type": "quantitative",
          "title": "Total Deaths (per 1000 people)",
          "axis": {
            "titleFontSize": 14
          }
        },
        "color": {
          "condition": {
            "selection": "highlight", 
            "value": "grey"
          },
          "value": "darkred"
        },
        "opacity": {
          "condition": {
            "selection": "highlight",
            "value": 1
          },
          "value": 0.9
        },
        "tooltip": [
          {"field": "date", "type": "temporal", "title": "Year"},
          {"field": "deaths_per_1000_people", "type": "quantitative", "title": "Total Deaths (per 1000)"}
        ]
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "goldenrod"
      },
      "encoding": {
        "x": {
          "field": "date", 
          "type": "temporal",  
          "axis": {
            "titleFontSize": 14
          }
        },
        "y": {
          "field": "annual_change",
          "type": "quantitative",
          "title": "Annual % Change",
          "axis": {
            "orient": "right",
            "titleFontSize": 14
          }
        },
        "tooltip": [
          {"field": "date", "type": "temporal", "title": "Year"},
          {"field": "annual_change", "type": "quantitative", "title": "Annual % Change"}
        ]
      }
    }
  ],
  "resolve": {
    "scale": {"y": "independent"}
  },
  "title": {
    "text": "Total Deaths and Annual % Change in Deaths (2012-2022)",
    "fontSize": 20,
    "fontWeight": "bold",
    "font": "serif",
    "align": "center",
    "lineHeight": 3
  },
  "width": 800,
  "height": 400,
  "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14
    },
    "legend": {
      "labelFontSize": 12,
      "titleFontSize": 14
    }
  }
}
